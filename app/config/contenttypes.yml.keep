    recordsperpage: 10           
    icon_many: fa:newspaper-o
    icon_one: fa:newspaper-o

# Berichten zijn nieuwsberichten geschreven voor de spelers en bondsleden.
# Definition: -
# Templates: -
# Content: -
berichten:
    name: Berichten
    singular_name: Bericht
    fields:
        title:
            type: text
            class: large
            group: content
        slug:
            type: slug
            uses: title
        teaser:
            type: textarea
            height: 150px
        body:
            type: markdown
            height: 600px
        image:
