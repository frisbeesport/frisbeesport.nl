# Pagina's zijn alle statische pagina's.
# Definition: -
# Templates: -
# Content: -
paginas: 
    name: Pagina's
    singular_name: Pagina
    fields:
        title:
            label: Titel
            type: text
            class: large
            group: content
        slug:
            type: slug
            uses: title
        image:
            label: Afbeelding
            type: image
            upload: paginas
        teaser:
            label: Header tekst
            type: textarea
            height: 150px
        body:
            label: Pagina text
            type: markdown
            height: 300px
        presections:
            label: Secties voor gegenereerde inhoud
            type: html
            height: 600px
            allowtwig: true
        postsections:
            label: Secties na gegenereerde inhoud
            type: html
            height: 600px
            allowtwig: true            
        template:
            type: templateselect
            filter: 'pagina*.twig'
        buttons:
            label: Buttons
            type: html
            height: 150px            
            allowtwig: true    
    taxonomy: [ afdelingen ]
    recordsperpage: 100
    icon_many: fa:file-o
    icon_one: fa:file-o
    searchable: true
    

# Documenten van de organisatie.
# Definition: ok
# Templates: -
# Content: -
documenten:
    name: Documenten
    singular_name: Document
    description: Documenten van de organisatie.
    fields:
        title:
            label: Titel
            type: text
        file:
            lable: Bestand
            type: file
            upload: documenten
    icon_many: fa:file-pdf-o
    icon_one: fa:file-pdf-o    
    taxonomy: [ documentcategorien ]
    searchable: true
    default_status: published

# Resources zijn de onderdelen waaruit pagina's worden opgebouwd.
# Definition: -
# Templates: -
# Content: -
resources:
    name: Resources
    singular_name: Resource
    fields:
        title:
            label: Titel
            type: text
            required: true
        slug:
            type: slug
            uses: title
        text:
            type: html
            height: 150px
        image:
            type: image
            upload: site
    icon_many: fa:paragraph
    icon_one: fa:paragraph
    searchable: false
    default_status: published
    show_on_dashboard: false
    viewless: true
