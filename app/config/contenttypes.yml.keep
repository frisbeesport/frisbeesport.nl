# Auteurs schrijven nieuwsberichten, persberichten of spelersberichten.
# Definition: ok 
# Templates: -
# Content: -
auteurs:
    name: Auteurs
    singular_name: Auteur
    description: Auteurs schrijven nieuwsberichten, persberichten of spelersberichten.
    fields:
        title:
            label: Naam
            type: text
            required: true
        description:
            label: Korte biografie
            info: Deze tekst wordt getoond bij een bericht geschreven door deze auteur.
            type: textarea
            height: 150px
            required: false            
        photo:
            label: Foto
            type: image
            upload: auteurs
    default_status: published
    icon_many: fa:pencil
    icon_one: fa:pencil
    searchable: false
    
# Werkgroepen zijn de werkgroepen binnen de NFB, inclusief het dagelijks bestuur.
# Definition: ok
# Templates: -
# Content: -
werkgroepen:
    name: Werkgroepen
    singular_name: Werkgroep
    description: Werkgroepen zijn de werkgroepen binnen de NFB, inclusief het dagelijks bestuur. 
    fields:
        title:
            label: Titel
            type: text
            required: true
        tagline:
            label: Tagline
            type: text
        description:
            label: Omschrijving
            type: textarea
            height: 150px
        email:
            type: text
            pattern: email
    relations:
        kader:
            multiple: true
            label: Selecteer leden
            order: -title
    default_status: published
    icon_many: fa:sitemap
    icon_one: fa:sitemap
    searchable: true

# Kaderleden zijn de leden van de werkgroepen binnen de NFB.
# Definition: ok
# Templates: -
# Content: -
kader:
    name: Kader
    singular_name: Kaderlid
    description: Kaderleden zijn de leden van de werkgroepen (en het bestuur) binnen de NFB.
    fields:
        title:
            label: Naam
            type: text
            required: true
        function:
            label: Functie
            type: text
        description:
            label: Omschrijving
            info: Deze korte omschrijving wordt getoond bij het kaderlid.
            type: textarea
            height: 150px
        email:
            type: text
            pattern: email
        photo:
            label: Foto
            type: image
            upload: kader
    default_status: published
    icon_many: fa:user
    icon_one: fa:user
    searchable: true
    
    
# Verenigingen zijn de Disc Golf en Ultimate verenigingen die lid zijn van de NFB.
# Definition: -
# Templates: -
# Content: -
verenigingen:
    name: Verenigingen
    singular_name: Vereniging
    description: Verenigingen zijn de Disc Golf en Ultimate verenigingen die lid zijn van de NFB.
    fields:
        title:
            label: Naam
            type: text
            group: content
            required: true
        town:
            label: Plaats
            type: text
            required: true
        contact:
            label: Contactpersoon
            type: text
        phone:
            label: Telefoon
            type: text
        url:
            label: Website
            type: text
            pattern: url
        email:
            label: Email
            type: text
            pattern: email
        logo:
            label: Logo
            type: image
            upload: verenigingen
        location:
            label: Locatie
            type: geolocation
    taxonomy: [ verenigingsaanbod ]
    default_status: published
    searchable: true
    icon_many: fa:group
    icon_one: fa:group
    

# Nieuwsberichten zijn berichten over Ultimate, Disc Golf of de Organisatie geschreven voor met name de niet-leden. 
# Definition: -
# Templates: -
# Content: -
nieuws:
    name: Nieuws
    singular_name: Nieuwsbericht
    fields:
        title:
            type: text
            class: large
            group: content
        slug:
            type: slug
            uses: title
        teaser:
            type: textarea
            height: 150px
        body:
            type: markdown
            height: 600px
        image:
            type: image
            upload: nieuws
            group: media
        video:
            type: video
            upload: nieuws
            group: media
        selectauteurs:
            label: Selecteer een auteur
            type: select
            values: auteurs/title
            group: content
    taxonomy: [ afdelingen, tags ]
    listing_records: 10
    sort: -datepublish
    recordsperpage: 10       
    icon_many: fa:file-text-o
    icon_one: fa:file-text-o

