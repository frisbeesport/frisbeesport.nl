{% setcontent concept_pagina = "paginas/#{concept.selectpagina}" %}<div class="card card--small card--concept">           

    {% if concept.image %}

    <a href="{{ concept_pagina.link }}">
        <img class="card__image" src="{{ concept.image|image(500,300,"c") }}">
    </a>

    {% endif %}


    <div class="card__content">

        <h3 class="card__title"><a class="title-link" href="{{ concept_pagina.link }}">{{ concept.title }}</a></h3>
                        
        <p class="card__text">{{ concept.description }}</p>
              
        <a class="card__link arrow-link" href="{{ concept_pagina.link }}">Ga naar concept...</a>

    </div>

</div>