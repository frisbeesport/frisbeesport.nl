
<section class="section--showcase {% if sectie.inverted %}section--inverse afdeling--background{% endif %}" 
         style="{% if sectie.minheight %} min-height:{{sectie.minheight}}; {% endif %} 
                {% if sectie.achtergrond %} background-image: url('{{ sectie.achtergrond|image(2000, 800, "c") }}'); {% endif %}">
	<div class="container">
		<div class="grid">
			<div class="section--showcase__content--left--wide">

			{% if sectie.caption  is not empty %}

			<div class="section__header">
			 	<h2 class="section__title">{{ sectie.caption }}</h2>
			</div>
			
			{% endif %}
	
			
			{% if sectie.body is not empty %}
			
			{{ sectie.body }}

			{% endif %}


			{% if sectie.body_advanced is not empty %}
			
			{{ sectie.body_advanced }}

			{% endif %}


			{% if sectie.linktitle is not empty %}

				{% if sectie.selectpagina != '0' %}
                    {% setcontent paginalink = "paginas/#{sectie.selectpagina}" %}
					<a class="arrow-link" href="{{ paginalink.link }}">{{ sectie.linktitle }}</a> 
				{% endif %}					

				{% if sectie.url is not empty %}
					<a class="btn-ghost" href="{{ sectie.url }}">{{ sectie.linktitle }}</a> 
				{% endif %}					
				
			{% endif %}	
			
			</div>	
		</div>			
	</div>

	{% if sectie.image is not empty %}
		<div class="section--showcase__image--right--wide" style="background-image: url('{{ paths.files }}{{ sectie.image }}');"></div>
	{% endif %}	

</section>