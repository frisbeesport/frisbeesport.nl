{% extends "sectietemplate.twig" %}

{% block sectie_classes %}
	
section--topics

{% endblock %}

{% block sectie_content %}

<div class="container">
	<div class="section__content">

		{% if sectie.caption is not empty %}
		
		<div class="section__title  section__title--centered">
			<h2>{{ sectie.caption }}</h2>
		</div>
		
		{% endif %}

		
		{% if sectie.body  is not empty %}
		
		{{ sectie.body }}

		{% endif %}


		{% if sectie.body_advanced is not empty %}
		
		{{ sectie.body_advanced }}

		{% endif %}

		<div class="topics">{% if sectie.topic1 is not empty %}{% include 'topic.twig' with { 'topicid': sectie.topic1 } %}{% endif %}{% if sectie.topic2 is not empty %}{% include 'topic.twig' with { 'topicid': sectie.topic2 } %}{% endif %}{% if sectie.topic3 is not empty %}{% include 'topic.twig' with { 'topicid': sectie.topic3 } %}{% endif %}{% if sectie.topic4 is not empty %}
			{% include 'topic.twig' with { 'topicid': sectie.topic4 } %}
		{% endif %}{% if sectie.topic5  is not empty %}
			{% include 'topic.twig' with { 'topicid': sectie.topic5 } %}
		{% endif %}{% if sectie.topic6  is not empty %}
			{% include 'topic.twig' with { 'topicid': sectie.topic6 } %}
		{% endif %}{% if sectie.topic7 is not empty %}
			{% include 'topic.twig' with { 'topicid': sectie.topic7 } %}
		{% endif %}{% if sectie.topic8 is not empty %}
			{% include 'topic.twig' with { 'topicid': sectie.topic8 } %}
		{% endif %}
		
		{% for topic in sectie.templatefields.topics %}
			{% include 'sectie_topics_part_topic.twig' with { 'topic': topic } %}
		{% endfor %}</div>

		{% if sectie.linktitle is not empty %}

			{% if sectie.selectpagina  is not empty %}
				<a class="arrow-link" href="{{ sectie.selectpagina.link }}">{{ sectie.linktitle }}</a></div>
			{% endif %}					

			{% if sectie.url  is not empty %}
				<a class="arrow-link" href="{{ sectie.url }}">{{ sectie.linktitle }}</a></div>
			{% endif %}					
			
		{% endif %}	

	</div>			
</div>

{% endblock %}
