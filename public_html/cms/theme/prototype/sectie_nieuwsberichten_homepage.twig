{% extends "sectietemplate.twig" %}

{% block sectie_classes %}
	
section--cards--small section--nieuws

{% endblock %}

{% block sectie_content %}
    
    {% setcontent nieuwsberichten = 'nieuws/latest/12' %}
      
        <div class="container">
        
            {% if sectie.caption is not empty %}

			<div class="section__header">
		        <div class="section__title section__title--centered"><h2>{{ sectie.caption }}</h2></div>
           	</div>

			{% endif %}

            <div class="smallcards">
                {% for nieuwsbericht in nieuwsberichten %}      

                {% include 'nieuwsbericht_card.twig' with { 'nieuwsbericht': nieuwsbericht } %} 
                
                {% endfor %}          
            </div>

    </div>

{% endblock %}
