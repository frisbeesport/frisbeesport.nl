{% extends "sectietemplate.twig" %}

{% block sectie_classes %}
	
section--showcase

{% endblock %}

{% block sectie_content %}

<div class="container">
	<div class="grid  section__content">
		{% if sectie.caption is not empty %}
			<div class="section__header section__title--double">
			 	<h2 class="section__title">{{ sectie.caption }}</h2>
			</div>
		{% endif %}

		<div class="section--showcase--double__left">

		{% setcontent topic1 = "topics/#{sectie.topic1}" %}

		{% if topic1.caption is not empty %}
			
			 	<h3>{{ topic1.caption }}</h3>
			
		{% endif %}

		
		{% if topic1.description  is not empty %}
		
		<p class="afdeling--text">{{ topic1.description  }}</p>

		{% endif %}


		{% if topic1.linktitle is not empty %}

			{% if topic1.selectpagina is not empty %}
                {% setcontent paginalink = "paginas/#{topic1.selectpagina}" %}
				<a class="arrow-link" href="{{ topic1.link }}">{{ topic1.linktitle }}</a>
			{% endif %}							

			{% if topic1.url is not empty %}
				<a class="arrow-link" href="{{ topic1.url }}">{{ topic1.linktitle }}</a> 
			{% endif %}					
			
		{% endif %}	
		
		</div>	

		<div class="section--showcase--double__right">

		{% setcontent topic2 = "topics/#{sectie.topic2}" %}

		{% if topic2.caption is not empty %}
			
			 	<h3>{{ topic2.caption }}</h3>
			
		{% endif %}

		
		{% if topic2.description is not empty %}
		
		<p>{{ topic2.description }}</p>

		{% endif %}

			{% if topic2.linktitle is not empty %}

			{% if topic2.selectpagina is not empty %}
                {% setcontent paginalink = "paginas/#{topic2.selectpagina}" %}
				<a class="arrow-link" href="{{ paginalink.link }}">{{ topic2.linktitle }}</a>
			{% endif %}							

			{% if topic2.url is not empty %}
				<a class="arrow-link" href="{{ topic2.url }}">{{ topic2.linktitle }}</a> 
			{% endif %}					
			
		{% endif %}	
		
		</div>	
	</div>			
</div>

{% endblock %}
