{% extends "pagina.twig" %}

{% block extended_content %}
    {% setcontent nieuwsberichten = 'nieuws/latest/10' where { afdelingen: afdeling } allowpaging %}
    
    <section class="section--cards--small section--nieuws">
        <div class="container">
            <div class="section__content">

                <div class="section__header"></div>

                <div class="smallcards">
                    {% for nieuwsbericht in nieuwsberichten %}      

                    {% include 'nieuwsbericht_card.twig' with { 'nieuwsbericht': nieuwsbericht } %} 
                    
                    {% endfor %}          
                </div>
                            
                {{ pager() }}
                
            </div>
        </div>
    </section>

{% endblock %}
