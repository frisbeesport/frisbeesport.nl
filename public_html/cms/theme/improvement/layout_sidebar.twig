{% set afdeling = "" %} 
{% for tag in record.taxonomy.afdelingen %}
	{% set afdeling = tag %}
{% endfor %}
      
{% include '_head.twig' with { 'title': algemeen.grouptitle, 'description': algemeen.grouplead, 'image': algemeen.groupimage, 'url': record.link } %}

<body class="background">
<div class="sheet">
        
    {% include '_browser-upgrade.twig' %}    
 
    <article>
    
    {% include '_header.twig' with { 'afdeling': afdeling, 'image': algemeen.groupimage, 'title': algemeen.grouptitle, 'header': algemeen.grouplead, 'buttons': '', 'fotograaf': algemeen.groupfotograaf } %}

    {% block prefix_content %}
    {% endblock %}

    <section>
        <div class="container">
		    <div class="grid">
             
            <div class="sidebar__top">
                {% block sidebar_top_content %}
                {% endblock %}
            </div><!-- sidebar -->
           
            <div class="sidebar__pagina">
                {% block sidebar_pagina_content %}
                {% endblock %}

                {% block sidebar_bottom_content %}
                {% endblock %}
            </div>
                   
            </div><!-- grid -->
            
    	</div><!-- container --> 
    </section>

    {% block extended_content %}
    {% endblock %}

    </article>
   
    {% include '_footer.twig' %}
	{% include '_scripts.twig' %}

    </div>

    {% include '_piwik.twig' %}

</body>
</html>
