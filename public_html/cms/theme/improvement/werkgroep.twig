{% extends "layout_sidebar.twig" %}

{% block sidebar_top_content %}

  
    <div class="menulist">
                    
    {% setcontent werkgroepen = 'werkgroepen'  %}
    {% for child in werkgroepen | reverse %}    
                        
        {% if child.id == record.id %}
        <div class="menulist__item menulist__item--current">
             <a href="{{ child.link }}" class="menulist__item__caption">{{ child.title }}</a>
        </div>
        {% else %}
        <div class="menulist__item">
             <a href="{{ child.link }}" class="menulist__item__caption">{{ child.title }}</a>
        </div>
        {% endif %}

    {% endfor %}  
                
    </div>    
            
     
            
{% endblock %}

{% block sidebar_bottom_content %}

{% endblock %}

{% block sidebar_pagina_content %}

    <div class="container">
    <div class="grid section__content">
    
<div class="widecard-header">
   
        
        <h2 class="widecard__title">{{ werkgroep.title }}</h2>

        {% if werkgroep.tagline is not empty %}
         
        <div class="card--subtitle">{{ werkgroep.tagline }}</div>

        {% endif %}
        

    </div>           

    <div class="widecard-copy">
           
        {% if werkgroep.description is not empty %}
        
        <p class="card__text">
            {{ werkgroep.description }}
        </p>
    
        {% endif %} 
        
        <div class="werkgroep__leden">

            {% for lid in werkgroep.leden %}
